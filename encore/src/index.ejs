<!doctype html>
<html>
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= htmlWebpackPlugin.options.title %></title>
    <link rel="icon" href="assets/favicon.png" id="favicon">
    <link rel="icon" href="assets/favicon-dark.png" id="favicon-dark">

</head>
<body>
  <div class="container">
    <h1><%= htmlWebpackPlugin.options.title %></h1>

    <div data-xt-drop="{ position: 'right' }">

      <button type="button" class="xt-button text-xs py-2 px-3.5 rounded-md text-white font-sans font-semibold leading-snug tracking-wider uppercase bg-primary-500 transition hover:bg-primary-600 active:bg-primary-700 on:bg-primary-700">
        list
